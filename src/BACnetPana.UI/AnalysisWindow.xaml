<Window x:Class="bacneTPana.UI.AnalysisWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="Paket-Analyse" Height="700" Width="1100"
        Background="#F0F0F0"
        FontSize="12"
        FontFamily="Segoe UI">
    <DockPanel LastChildFill="True">
        <!-- Toolbar -->
        <Grid DockPanel.Dock="Top" Background="#2D2D2D" Height="56">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="12,0">
                <TextBlock x:Name="AnalysisTitleTextBlock"
                           Text="Analyse der gefilterten Pakete (kein Filter)"
                           Foreground="White" FontSize="16" FontWeight="Bold"/>
            </StackPanel>
        </Grid>

        <!-- Main content -->
        <Grid Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Zusammenfassung -->
            <Border Grid.Row="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" Padding="10" Margin="0,0,0,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="6,0">
                        <TextBlock Text="Pakete:" FontWeight="Bold"/>
                        <TextBlock x:Name="PacketCountLabel" Text="0" FontSize="18" Foreground="#0078D4" FontWeight="Bold"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="6,0">
                        <TextBlock Text="GesamtgrÃ¶ÃŸe:" FontWeight="Bold"/>
                        <TextBlock x:Name="TotalSizeLabel" Text="0 B" FontSize="18" Foreground="#0078D4" FontWeight="Bold"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Margin="6,0">
                        <TextBlock Text="Zeitspanne:" FontWeight="Bold"/>
                        <TextBlock x:Name="TimeSpanLabel" Text="0 s" FontSize="18" Foreground="#0078D4" FontWeight="Bold"/>
                    </StackPanel>

                    <StackPanel Grid.Column="3" Margin="6,0">
                        <TextBlock Text="Protokolle:" FontWeight="Bold"/>
                        <TextBlock x:Name="ProtocolCountLabel" Text="0" FontSize="18" Foreground="#0078D4" FontWeight="Bold"/>
                    </StackPanel>

                    <StackPanel Grid.Column="4" Margin="6,0">
                        <TextBlock Text="Startzeit:" FontWeight="Bold"/>
                        <TextBlock x:Name="SummaryStartDateTimeLabel" Text="â€”" FontSize="14" Foreground="#0078D4" FontWeight="SemiBold"/>
                    </StackPanel>

                    <StackPanel Grid.Column="5" Margin="6,0">
                        <TextBlock Text="Endzeit:" FontWeight="Bold"/>
                        <TextBlock x:Name="SummaryEndDateTimeLabel" Text="â€”" FontSize="14" Foreground="#0078D4" FontWeight="SemiBold"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Zeitbereich (fixiert) - MOVED TO TOP -->
            <Border Grid.Row="1" Background="#F9F9F9" BorderBrush="#CCCCCC" BorderThickness="1" Padding="10" Margin="0,0,0,8">
                <StackPanel>
                    <TextBlock Text="Zeitbereich (fÃ¼r alle Charts)" FontWeight="Bold" Margin="0,0,0,6"/>

                    <Grid Margin="0,0,0,8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Start-Slider -->
                        <Grid Grid.Row="0" Margin="0,0,0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Start:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>
                            <Slider Grid.Column="1" x:Name="StartTimeSlider" Minimum="0" Maximum="100" Value="0"
                                    TickFrequency="1" IsSnapToTickEnabled="False"
                                    ValueChanged="StartTimeSlider_ValueChanged"/>
                        </Grid>

                        <!-- End-Slider -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Ende:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>
                            <Slider Grid.Column="1" x:Name="EndTimeSlider" Minimum="0" Maximum="100" Value="100"
                                    TickFrequency="1" IsSnapToTickEnabled="False"
                                    ValueChanged="EndTimeSlider_ValueChanged"/>
                        </Grid>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" x:Name="StartTimeLabel" Text="0.00 s" FontWeight="Bold" Foreground="#0078D4"/>
                        <TextBlock Grid.Column="1" x:Name="DurationLabel" Text="Anzeigedauer: 0.00 s" HorizontalAlignment="Center" FontStyle="Italic" Foreground="#666666"/>
                        <TextBlock Grid.Column="2" x:Name="EndTimeLabel" Text="0.00 s" FontWeight="Bold" Foreground="#0078D4"/>
                    </Grid>

                    <Grid Margin="0,4,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Start:" FontWeight="SemiBold" Margin="0,0,6,0"/>
                        <TextBlock Grid.Column="1" x:Name="StartDateTimeLabel" Text="â€”"/>
                        <TextBlock Grid.Column="2" x:Name="EndDateTimeLabel" Text="â€”" HorizontalAlignment="Right"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Scrollable Content -->
            <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Background="#F7F7F7">
                <StackPanel Margin="0,0,0,8">

                    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                    <!-- ALLGEMEINE ANALYSEN -->
                    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                    <Border Background="#F0F8FF" BorderBrush="#0078D4" BorderThickness="2" Padding="8" Margin="0,0,0,12" CornerRadius="4">
                        <StackPanel>
                            <TextBlock Text="ðŸ“Š ALLGEMEINE ANALYSEN" FontWeight="Bold" FontSize="14" Foreground="#0078D4" Margin="0,0,0,8"/>

                            <!-- Zeitdiagramm -->
                            <Border Background="White" BorderBrush="#CCCCCC" BorderThickness="1" Padding="0" Margin="0,0,0,8" MinHeight="260">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Text="Pakete pro Sekunde" Background="#F5F5F5" Padding="10" FontWeight="Bold"/>
                                    <oxy:PlotView Grid.Row="1" x:Name="TimeChart" Margin="10" PreviewMouseWheel="PlotView_PreviewMouseWheel"/>
                                </Grid>
                            </Border>

                            <!-- TCP Analysis Section -->
                            <Border x:Name="TcpAnalysisBorder" Background="White" BorderBrush="#FFC107" BorderThickness="2" Padding="15" Margin="0,0,0,8" MinHeight="180" Visibility="Collapsed">
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="âš ï¸ TCP-Analyse (Probleme)" FontWeight="Bold" FontSize="13" Margin="0,0,0,12" Foreground="#FFC107"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Row 0: Retransmission -->
                                        <Border Grid.Row="0" Grid.Column="0" Background="#FFF8E1" BorderBrush="#FFC107" BorderThickness="1" Padding="12" Margin="0,0,6,6" CornerRadius="4" MinHeight="50">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                                    <Ellipse x:Name="TcpRetransmissionIndicator" Width="14" Height="14" Fill="#4CAF50" Stroke="#888" StrokeThickness="1" Margin="0,0,6,0"/>
                                                    <TextBlock Text="Retransmission:" FontSize="11" FontWeight="Bold" Foreground="#555"/>
                                                </StackPanel>
                                                <TextBlock Grid.Column="2" x:Name="TcpRetransmissionLabel" Text="0" FontSize="14" Foreground="#FFC107" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>

                                        <!-- Row 0: FastRetransmission -->
                                        <Border Grid.Row="0" Grid.Column="1" Background="#FFF8E1" BorderBrush="#FFC107" BorderThickness="1" Padding="12" Margin="6,0,6,6" CornerRadius="4" MinHeight="50">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                                    <Ellipse x:Name="TcpFastRetransmissionIndicator" Width="14" Height="14" Fill="#4CAF50" Stroke="#888" StrokeThickness="1" Margin="0,0,6,0"/>
                                                    <TextBlock Text="Fast Retransmission:" FontSize="11" FontWeight="Bold" Foreground="#555"/>
                                                </StackPanel>
                                                <TextBlock Grid.Column="2" x:Name="TcpFastRetransmissionLabel" Text="0" FontSize="14" Foreground="#FFC107" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>

                                        <!-- Row 0: DuplicateAck -->
                                        <Border Grid.Row="0" Grid.Column="2" Background="#FFF8E1" BorderBrush="#FFC107" BorderThickness="1" Padding="12" Margin="6,0,6,6" CornerRadius="4" MinHeight="50">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                                    <Ellipse x:Name="TcpDuplicateAckIndicator" Width="14" Height="14" Fill="#4CAF50" Stroke="#888" StrokeThickness="1" Margin="0,0,6,0"/>
                                                    <TextBlock Text="Duplicate ACK:" FontSize="11" FontWeight="Bold" Foreground="#555"/>
                                                </StackPanel>
                                                <TextBlock Grid.Column="2" x:Name="TcpDuplicateAckLabel" Text="0" FontSize="14" Foreground="#FFC107" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>

                                        <!-- Row 0: Reset -->
                                        <Border Grid.Row="0" Grid.Column="3" Background="#FFF8E1" BorderBrush="#FFC107" BorderThickness="1" Padding="12" Margin="6,0,0,6" CornerRadius="4" MinHeight="50">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                                    <Ellipse x:Name="TcpResetIndicator" Width="14" Height="14" Fill="#4CAF50" Stroke="#888" StrokeThickness="1" Margin="0,0,6,0"/>
                                                    <TextBlock Text="Reset-Flags:" FontSize="11" FontWeight="Bold" Foreground="#555"/>
                                                </StackPanel>
                                                <TextBlock Grid.Column="2" x:Name="TcpResetLabel" Text="0" FontSize="14" Foreground="#FFC107" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>

                                        <!-- Row 1: LostSegment -->
                                        <Border Grid.Row="1" Grid.Column="0" Background="#FFF8E1" BorderBrush="#FFC107" BorderThickness="1" Padding="12" Margin="0,6,6,0" CornerRadius="4" MinHeight="50">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                                    <Ellipse x:Name="TcpLostSegmentIndicator" Width="14" Height="14" Fill="#4CAF50" Stroke="#888" StrokeThickness="1" Margin="0,0,6,0"/>
                                                    <TextBlock Text="Lost Segment:" FontSize="11" FontWeight="Bold" Foreground="#555"/>
                                                </StackPanel>
                                                <TextBlock Grid.Column="2" x:Name="TcpLostSegmentLabel" Text="0" FontSize="14" Foreground="#FFC107" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>

                                        <!-- Row 1: OutOfOrder -->
                                        <Border Grid.Row="1" Grid.Column="1" Background="#FFF8E1" BorderBrush="#FFC107" BorderThickness="1" Padding="12" Margin="6,6,6,0" CornerRadius="4" MinHeight="50">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                                    <Ellipse x:Name="TcpOutOfOrderIndicator" Width="14" Height="14" Fill="#4CAF50" Stroke="#888" StrokeThickness="1" Margin="0,0,6,0"/>
                                                    <TextBlock Text="Out of Order:" FontSize="11" FontWeight="Bold" Foreground="#555"/>
                                                </StackPanel>
                                                <TextBlock Grid.Column="2" x:Name="TcpOutOfOrderLabel" Text="0" FontSize="14" Foreground="#FFC107" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>

                                        <!-- Row 1: WindowSizeZero -->
                                        <Border Grid.Row="1" Grid.Column="2" Background="#FFF8E1" BorderBrush="#FFC107" BorderThickness="1" Padding="12" Margin="6,6,6,0" CornerRadius="4" MinHeight="50">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                                    <Ellipse x:Name="TcpWindowSizeZeroIndicator" Width="14" Height="14" Fill="#4CAF50" Stroke="#888" StrokeThickness="1" Margin="0,0,6,0"/>
                                                    <TextBlock Text="Window Size 0:" FontSize="11" FontWeight="Bold" Foreground="#555"/>
                                                </StackPanel>
                                                <TextBlock Grid.Column="2" x:Name="TcpWindowSizeZeroLabel" Text="0" FontSize="14" Foreground="#FFC107" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>

                                        <!-- Row 1: IcmpUnreachable -->
                                        <Border Grid.Row="1" Grid.Column="3" Background="#FFF8E1" BorderBrush="#FFC107" BorderThickness="1" Padding="12" Margin="6,6,0,0" CornerRadius="4" MinHeight="50">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                                    <Ellipse x:Name="TcpIcmpUnreachableIndicator" Width="14" Height="14" Fill="#4CAF50" Stroke="#888" StrokeThickness="1" Margin="0,0,6,0"/>
                                                    <TextBlock Text="ICMP Unreachable:" FontSize="11" FontWeight="Bold" Foreground="#555"/>
                                                </StackPanel>
                                                <TextBlock Grid.Column="2" x:Name="TcpIcmpUnreachableLabel" Text="0" FontSize="14" Foreground="#FFC107" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>

                                        <!-- Row 2: KeepAlive (spanning 3 cols) -->
                                        <Border Grid.Row="2" Grid.Column="0" Background="#FFF8E1" BorderBrush="#FFC107" BorderThickness="1" Padding="12" Margin="0,6,6,0" CornerRadius="4" MinHeight="50">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                                    <Ellipse x:Name="TcpKeepAliveIndicator" Width="14" Height="14" Fill="#4CAF50" Stroke="#888" StrokeThickness="1" Margin="0,0,6,0"/>
                                                    <TextBlock Text="Keep-Alive:" FontSize="11" FontWeight="Bold" Foreground="#555"/>
                                                </StackPanel>
                                                <TextBlock Grid.Column="2" x:Name="TcpKeepAliveLabel" Text="0" FontSize="14" Foreground="#FFC107" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>

                                        <!-- Row 2: Overall Loss (spanning 3 cols) -->
                                        <Border Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Background="#FFF8E1" BorderBrush="#FFC107" BorderThickness="1" Padding="12" Margin="6,6,0,0" CornerRadius="4" MinHeight="50">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                                    <Ellipse x:Name="TcpLossOverallIndicator" Width="14" Height="14" Fill="#4CAF50" Stroke="#888" StrokeThickness="1" Margin="0,0,6,0"/>
                                                    <TextBlock Text="Gesamtverlust:" FontSize="11" FontWeight="Bold" Foreground="#555"/>
                                                </StackPanel>
                                                <TextBlock Grid.Column="2" x:Name="TcpLossOverallLabel" Text="0 (0.00 %)" FontSize="14" Foreground="#DC3545" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Broadcast Section -->
                            <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" Padding="15" Margin="0,0,0,0" MinHeight="280">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Broadcasts (Top Absender)" FontWeight="Bold" Margin="0,0,0,6"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="BroadcastCountLabel" Text="Broadcasts: 0" HorizontalAlignment="Right" FontWeight="Bold" Foreground="#DC3545"/>

                                    <oxy:PlotView Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" x:Name="BroadcastChart" Height="240" Margin="0,6,0,0" PreviewMouseWheel="PlotView_PreviewMouseWheel" />
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>


                </StackPanel>
            </ScrollViewer>
        </Grid>
    </DockPanel>
</Window>
