<Window x:Class="BACnetPana.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BACnetPana - Netzwerk-Analyse" Height="900" Width="1400"
        Background="#F0F0F0"
        FontSize="12"
        FontFamily="Segoe UI"
        Icon="icons/toolicon.ico">
    <DockPanel LastChildFill="True">
        <!-- Toolbar + Progress -->
        <Grid DockPanel.Dock="Top" Background="#2D2D2D">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Buttons -->
            <Grid Grid.Row="0" Height="80">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="10">
                    <Image Source="images/toolicon.png" Width="60" Height="60" Margin="10,0,5,0" VerticalAlignment="Center"/>
                    <Button x:Name="OpenFileButton" Padding="15,10" Margin="5" MinHeight="50" MinWidth="100"
                            Background="#0078D4" Foreground="White" FontSize="16"
                            Click="OpenFileButton_Click">
                        <TextBlock Text="📁 PCAP öffnen" TextWrapping="NoWrap"/>
                    </Button>
                    <Button x:Name="AnalysisButton" Padding="15,10" Margin="5" MinHeight="50" MinWidth="100"
                            Background="#107C10" Foreground="White" FontSize="16"
                            Click="AnalysisButton_Click"
                            Visibility="{Binding IsAnalysisReady, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="🔄 Analysieren" TextWrapping="NoWrap"/>
                    </Button>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="10">
                    <Button x:Name="HelpButton" Padding="15,10" Margin="5" MinHeight="50" MinWidth="100"
                            Background="#6264A7" Foreground="White" FontSize="16"
                            Click="WiresharkInfoButton_Click"
                            ToolTip="Informationen zur Wireshark/TShark Installation">
                        <TextBlock Text="❓ Hilfe" TextWrapping="NoWrap"/>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Progress Bars -->
            <Grid Grid.Row="1" Background="#1E1E1E" Height="40" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Phase 1 Progress -->
                <Grid Grid.Column="0" Margin="0,0,2,0">
                    <ProgressBar Value="{Binding Phase1Progress}" Maximum="100" Background="#404040" Foreground="#0078D4" Height="40"/>
                    <TextBlock Text="{Binding Phase1Message}" Foreground="White" Padding="10,0" VerticalAlignment="Center" FontSize="11" FontWeight="SemiBold" HorizontalAlignment="Left"/>
                </Grid>

                <!-- Phase 2 Progress -->
                <Grid Grid.Column="1" Margin="2,0,0,0">
                    <ProgressBar Value="{Binding Phase2Progress}" Maximum="100" Background="#404040" Foreground="#28A745" Height="40"/>
                    <TextBlock Text="{Binding Phase2Message}" Foreground="White" Padding="10,0" VerticalAlignment="Center" FontSize="11" FontWeight="SemiBold" HorizontalAlignment="Left"/>
                </Grid>
            </Grid>
        </Grid>

        <!-- Main Grid -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- Left Side - Packet List and Details -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" MinHeight="200"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="300" MinHeight="100"/>
                </Grid.RowDefinitions>

                <!-- Packet List -->
                <Border BorderBrush="#CCCCCC" BorderThickness="1" Background="White">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <DataGrid Grid.Row="1" x:Name="PacketGrid" AutoGenerateColumns="False"
                                  Background="White" GridLinesVisibility="All" BorderThickness="0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Nr." Binding="{Binding PacketNumber}" Width="50"/>
                                <DataGridTextColumn Header="Zeit" Binding="{Binding Timestamp, StringFormat=HH:mm:ss.fff}" Width="100"/>
                                <DataGridTextColumn Header="Quell-IP" Binding="{Binding SourceIp}" Width="120"/>
                                <DataGridTextColumn Header="Ziel-IP" Binding="{Binding DestinationIp}" Width="120"/>
                                <DataGridTextColumn Header="Protokoll" Binding="{Binding DisplayProtocol}" Width="80"/>
                                <DataGridTextColumn Header="Quell-Port" Binding="{Binding SourcePort}" Width="80"/>
                                <DataGridTextColumn Header="Ziel-Port" Binding="{Binding DestinationPort}" Width="80"/>
                                <DataGridTextColumn Header="Größe" Binding="{Binding PacketLength}" Width="70"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>

                <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" Background="#CCCCCC" Height="5" Cursor="SizeNS"/>

                <!-- Packet Details -->
                <Border Grid.Row="2" BorderBrush="#CCCCCC" BorderThickness="1" Background="White">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Paket-Details" Background="#F5F5F5" Margin="10" FontWeight="Bold" Grid.Row="0"/>

                        <TreeView x:Name="PacketDetailsTree" Grid.Row="1" Background="White" Margin="5">
                            <TreeViewItem Header="Allgemein"/>
                            <TreeViewItem Header="Ethernet"/>
                            <TreeViewItem Header="IP"/>
                            <TreeViewItem Header="Transport"/>
                            <TreeViewItem Header="Payload"/>
                        </TreeView>
                    </Grid>
                </Border>
            </Grid>

            <!-- Right Side - Statistics -->
            <Grid Grid.Column="1" Background="White" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Summary Stats -->
                <StackPanel Grid.Row="0" Background="#F5F5F5" Margin="5">
                    <TextBlock Text="Statistik-Übersicht" FontWeight="Bold" FontSize="14" Margin="10"/>
                    <Separator Background="#CCCCCC" Margin="0"/>
                    <StackPanel Margin="10">
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Pakete:" Width="120" FontWeight="Bold"/>
                            <TextBlock x:Name="TotalPacketsLabel" Text="0" Foreground="#0078D4" FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="Bytes:" Width="120" FontWeight="Bold"/>
                            <TextBlock x:Name="TotalBytesLabel" Text="0 B" Foreground="#0078D4" FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="Dauer:" Width="120" FontWeight="Bold"/>
                            <TextBlock x:Name="DurationLabel" Text="0 s" Foreground="#0078D4" FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="Durchsatz:" Width="120" FontWeight="Bold"/>
                            <TextBlock x:Name="ThroughputLabel" Text="0 Mbps" Foreground="#0078D4" FontWeight="Bold"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!-- Protocol Chart -->
                <Border Grid.Row="1" BorderBrush="#CCCCCC" BorderThickness="1" Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Background="#F5F5F5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="ProtocolHeaderTextBlock" Text="Protokolle (Hierarchisch)" Grid.Column="0" Padding="10" FontWeight="Bold" VerticalAlignment="Center" Foreground="Black"/>
                            <Button x:Name="FilterByProtocolButton" Grid.Column="1" Margin="3" Padding="8,5"
                                    Background="#FF96D2FF" Foreground="White" BorderThickness="0"
                                    Click="FilterByProtocolButton_Click" ToolTip="Markiertes Protokoll als Filter anwenden">
                                <TextBlock Text="🔍" FontSize="16"/>
                            </Button>
                            <Button x:Name="ClearFilterButton" Grid.Column="2" Margin="3" Padding="8,5"
                                    Background="#FFFFBDC2" Foreground="White" BorderThickness="0"
                                    Click="ClearFilterButton_Click" ToolTip="Filter zurücksetzen">
                                <TextBlock Text="✖" FontSize="16"/>
                            </Button>
                        </Grid>
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <TreeView x:Name="HierarchicalProtocolTree" Margin="5" Background="White" BorderThickness="0">
                                <TreeView.Resources>
                                    <HierarchicalDataTemplate x:Key="ProtocolNodeTemplate" ItemsSource="{Binding Children}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Name}" FontFamily="Consolas" FontWeight="{Binding FontWeight}" Margin="0,2"/>
                                            <TextBlock Text=" (" Foreground="Gray" Margin="5,2,0,2"/>
                                            <TextBlock Text="{Binding Count}" FontWeight="Bold" Foreground="#0078D4" Margin="0,2"/>
                                            <TextBlock Text=" Pakete)" Foreground="Gray" Margin="0,2"/>
                                        </StackPanel>
                                    </HierarchicalDataTemplate>
                                </TreeView.Resources>
                                <TreeView.ItemTemplate>
                                    <HierarchicalDataTemplate ItemsSource="{Binding Children}" ItemTemplate="{StaticResource ProtocolNodeTemplate}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Name}" FontFamily="Consolas" FontWeight="{Binding FontWeight}" Margin="0,2"/>
                                            <TextBlock Text=" (" Foreground="Gray" Margin="5,2,0,2"/>
                                            <TextBlock Text="{Binding Count}" FontWeight="Bold" Foreground="#0078D4" Margin="0,2"/>
                                            <TextBlock Text=" Pakete)" Foreground="Gray" Margin="0,2"/>
                                        </StackPanel>
                                    </HierarchicalDataTemplate>
                                </TreeView.ItemTemplate>
                            </TreeView>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- Top IPs -->
                <Border Grid.Row="2" BorderBrush="#CCCCCC" BorderThickness="1" Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Top IP-Adressen" Background="#F5F5F5" Margin="10" FontWeight="Bold" Grid.Row="0"/>
                        <ListBox x:Name="TopIpsList" Grid.Row="1" Margin="5" Background="White"/>
                    </Grid>
                </Border>

                <!-- Logs -->
                <Border Grid.Row="3" BorderBrush="#CCCCCC" BorderThickness="1" Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Background="#F5F5F5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Protokoll" Margin="10" FontWeight="Bold" Grid.Column="0" VerticalAlignment="Center"/>
                            <CheckBox x:Name="AutoScrollCheckBox" Grid.Column="1" Margin="5" VerticalAlignment="Center"
                                      IsChecked="True" ToolTip="Automatisch zu neuesten Einträgen scrollen"/>
                            <TextBlock Grid.Column="1" Margin="25,0,5,0" Text="Auto-Scroll" VerticalAlignment="Center" FontSize="11"/>
                            <Button x:Name="ClearLogButton" Grid.Column="3" Margin="3" Padding="8,5"
                                    Background="#FFA8FBB1" Foreground="White" BorderThickness="0"
                                    Click="ClearLogButton_Click" ToolTip="Protokoll löschen">
                                <TextBlock Text="🗑" FontSize="16" Foreground="Black"/>
                            </Button>
                        </Grid>
                        <ScrollViewer Grid.Row="1" x:Name="LogScrollViewer" VerticalScrollBarVisibility="Auto" Background="White">
                            <ListBox x:Name="LogList" Background="White" Foreground="#333" BorderThickness="0"/>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
