<Window x:Class="bacneTPana.UI.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="bacneTPana - Hilfe" Height="600" Width="800"
        Background="#F0F0F0"
        FontFamily="Segoe UI"
        Icon="icons/toolicon.ico"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- TabControl -->
        <TabControl Grid.Row="0" Background="White" Margin="5">
            <!-- Tab 1: Hilfe -->
            <TabItem Header="üìñ Hilfe" Background="White">
                <Grid Background="White">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <StackPanel Margin="15">
                            <!-- Wireshark/TShark Section -->
                            <StackPanel Margin="0,0,0,15">
                                <TextBlock Text="Wireshark/TShark Installation" FontSize="16" FontWeight="Bold" Foreground="#2D2D2D" Margin="0,0,0,10"/>
                                <Border Background="#F5F5F5" Padding="15" CornerRadius="5">
                                    <StackPanel>
                                        <TextBlock Text="Status:" FontWeight="Bold" Margin="0,0,0,5"/>
                                        <TextBlock x:Name="TSharkStatusText" TextWrapping="Wrap" Foreground="#333333" LineHeight="18" Margin="0,0,0,15"/>

                                        <TextBlock Text="Anleitung:" FontWeight="Bold" Margin="0,0,0,10"/>
                                        <TextBlock TextWrapping="Wrap" Foreground="#333333" LineHeight="18" Margin="0,0,0,8">
                                            <Run>1. Besuchen Sie </Run>
                                            <Hyperlink Foreground="#0078D4" x:Name="WiresharkLink">https://www.wireshark.org/download.html</Hyperlink>
                                        </TextBlock>
                                        <TextBlock TextWrapping="Wrap" Foreground="#333333" LineHeight="18" Margin="0,0,0,8">2. Laden Sie die neueste Version von Wireshark herunter und installieren Sie sie</TextBlock>
                                        <TextBlock TextWrapping="Wrap" Foreground="#333333" LineHeight="18" Margin="0,0,0,8">3. TShark wird automatisch mit Wireshark installiert</TextBlock>
                                        <TextBlock TextWrapping="Wrap" Foreground="#333333" LineHeight="18" Margin="0,0,0,15">4. Starten Sie die bacneTPana-Anwendung neu</TextBlock>

                                        <TextBlock Text="Funktionen mit TShark:" FontWeight="Bold" Margin="0,0,0,10"/>
                                        <TextBlock TextWrapping="Wrap" Foreground="#333333" LineHeight="18" Margin="20,0,0,0">‚Ä¢ Alle BACnet-Services (ReadProperty, WriteProperty, etc.)</TextBlock>
                                        <TextBlock TextWrapping="Wrap" Foreground="#333333" LineHeight="18" Margin="20,0,0,0">‚Ä¢ Object Types und Instance Numbers</TextBlock>
                                        <TextBlock TextWrapping="Wrap" Foreground="#333333" LineHeight="18" Margin="20,0,0,0">‚Ä¢ Property Identifiers</TextBlock>
                                        <TextBlock TextWrapping="Wrap" Foreground="#333333" LineHeight="18" Margin="20,0,0,0">‚Ä¢ Vendor-Informationen</TextBlock>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <!-- Anwendung Section -->
                            <StackPanel Margin="0,0,0,15">
                                <TextBlock Text="Anwendung verwenden" FontSize="16" FontWeight="Bold" Foreground="#2D2D2D" Margin="0,0,0,10"/>
                                <Border Background="#F5F5F5" Padding="15" CornerRadius="5">
                                    <StackPanel>
                                        <TextBlock Text="Schritte:" FontWeight="Bold" Margin="0,0,0,8"/>
                                        <TextBlock TextWrapping="Wrap" Foreground="#333333" LineHeight="18" Margin="0,0,0,8">1. Klicken Sie auf "üìÅ PCAP √∂ffnen", um eine PCAP-Datei zu laden</TextBlock>
                                        <TextBlock TextWrapping="Wrap" Foreground="#333333" LineHeight="18" Margin="0,0,0,8">2. Nach dem Laden k√∂nnen Sie zwischen zwei Analysemodi w√§hlen:</TextBlock>
                                        <TextBlock TextWrapping="Wrap" Foreground="#333333" LineHeight="18" Margin="20,0,0,0">‚Ä¢ üîÑ Allg. Analyse - Zeigt allgemeine Netzwerk-Statistiken</TextBlock>
                                        <TextBlock TextWrapping="Wrap" Foreground="#333333" LineHeight="18" Margin="20,0,0,0">‚Ä¢ üè¢ BACnet Analyse - Detaillierte BACnet-Protokollanalyse</TextBlock>
                                        <TextBlock TextWrapping="Wrap" Foreground="#333333" LineHeight="18" Margin="20,0,0,8">‚Ä¢ üîç Filter - √úber Protokolle k√∂nnen Sie f√ºr Analysen vorfiltern</TextBlock>
                                        <TextBlock TextWrapping="Wrap" Foreground="#333333" LineHeight="18" Margin="0,0,0,0">3. Die Ergebnisse werden in den entsprechenden Tabs angezeigt</TextBlock>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <!-- Unterst√ºtzte Formate -->
                            <StackPanel>
                                <TextBlock Text="Unterst√ºtzte Dateiformate" FontSize="16" FontWeight="Bold" Foreground="#2D2D2D" Margin="0,0,0,10"/>
                                <Border Background="#F5F5F5" Padding="15" CornerRadius="5">
                                    <StackPanel>
                                        <TextBlock TextWrapping="Wrap" Foreground="#333333" LineHeight="18" Margin="0,0,0,8">Die Anwendung unterst√ºtzt folgende Dateiformate:</TextBlock>
                                        <TextBlock TextWrapping="Wrap" Foreground="#333333" LineHeight="18" Margin="20,0,0,0">‚Ä¢ .pcap (standard Wireshark-Format)</TextBlock>
                                        <TextBlock TextWrapping="Wrap" Foreground="#333333" LineHeight="18" Margin="20,0,0,0">‚Ä¢ .pcapng (neueres Wireshark-Format mit mehr Metadaten)</TextBlock>
                                        <TextBlock TextWrapping="Wrap" Foreground="#333333" LineHeight="18" Margin="20,0,0,0">‚Ä¢ .cap (alternative Dateiendung)</TextBlock>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <!-- Tab 2: √úber & Updates -->
            <TabItem Header="üì¶ Updates &amp; Infos" Background="White">
                <Grid Background="White">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <StackPanel Margin="15">
                            <!-- Update Check Section -->
                            <StackPanel Margin="0,0,0,15">
                                <TextBlock Text="üîÑ Update-Pr√ºfung" FontSize="16" FontWeight="Bold" Foreground="#2D2D2D" Margin="0,0,0,10"/>
                                <Border Background="#F5F5F5" Padding="15" CornerRadius="5">
                                    <StackPanel>
                                        <TextBlock x:Name="UpdateStatusTextBlock" TextWrapping="Wrap" Foreground="#333333" LineHeight="18" Margin="0,0,0,10"/>
                                        <TextBlock x:Name="ReleaseNotesTextBlock" TextWrapping="Wrap" Foreground="#555555" FontSize="12" LineHeight="16" Margin="0,0,0,15" Text=""/>
                                        <StackPanel Orientation="Horizontal">
                                            <Button x:Name="CheckForUpdatesButton" Padding="15,8" MinWidth="130" Background="#0078D4" Foreground="White" FontSize="12" Margin="0,0,10,0">üîÑ Jetzt pr√ºfen</Button>
                                            <Button x:Name="DownloadUpdateButton" Padding="15,8" MinWidth="130" Background="#28A745" Foreground="White" FontSize="12" Click="DownloadUpdateButton_Click">‚öôÔ∏è Installieren</Button>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <!-- Anwendungs-Info Section -->
                            <StackPanel Margin="0,0,0,15">
                                <TextBlock Text="‚ÑπÔ∏è Anwendungs-Informationen" FontSize="16" FontWeight="Bold" Foreground="#2D2D2D" Margin="0,0,0,10"/>
                                <Border Background="#F5F5F5" Padding="15" CornerRadius="5">
                                    <StackPanel>
                                        <TextBlock x:Name="VersionTextBlock" TextWrapping="Wrap" Foreground="#333333" LineHeight="18" Margin="0,0,0,8" FontSize="13"/>
                                        <TextBlock x:Name="AuthorTextBlock" TextWrapping="Wrap" Foreground="#333333" LineHeight="18" Margin="0,0,0,8" FontSize="13"/>
                                        <TextBlock TextWrapping="Wrap" Foreground="#333333" LineHeight="18" Margin="0,0,0,8" FontSize="13">
                                            <Run>Repository: </Run>
                                            <Hyperlink x:Name="RepositoryLink" Foreground="#0078D4" NavigateUri="https://github.com/Flecky13/bacneTPana">https://github.com/Flecky13/bacneTPana</Hyperlink>
                                        </TextBlock>
                                        <TextBlock TextWrapping="Wrap" Foreground="#333333" LineHeight="18" Margin="0,0,0,8" FontSize="13">
                                            <Run>Support: </Run>
                                            <Hyperlink x:Name="SupportLink" Foreground="#0078D4" NavigateUri="https://buymeacoffee.com/pedrotepe">https://buymeacoffee.com/pedrotepe</Hyperlink>
                                        </TextBlock>
                                        <TextBlock Text="Basierend auf:" FontWeight="Bold" Margin="0,10,0,5"/>
                                        <TextBlock TextWrapping="Wrap" Foreground="#333333" LineHeight="18" Margin="20,0,0,0">‚Ä¢ SharpPcap - PCAP-Datei Parsing</TextBlock>
                                        <TextBlock TextWrapping="Wrap" Foreground="#333333" LineHeight="18" Margin="20,0,0,0">‚Ä¢ Wireshark/TShark - BACnet-Protokoll-Unterst√ºtzung</TextBlock>
                                        <TextBlock TextWrapping="Wrap" Foreground="#333333" LineHeight="18" Margin="20,0,0,0">‚Ä¢ .NET 10 - Moderne Technologie</TextBlock>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Footer with Close Button -->
        <Border Grid.Row="1" Background="#F5F5F5" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                <Button x:Name="CloseButton" Padding="20,8" MinWidth="100" Background="#6264A7" Foreground="White" FontSize="13" FontWeight="SemiBold" Click="CloseButton_Click">Schlie√üen</Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
